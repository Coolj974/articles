<div class="grid-container">
  <h1>New articles</h1>
  <div class="grid-x grid-padding-x">
    <div class="medium-6 cell">


<%= form_with scope: :article, url: articles_path, local: true do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :text %><br>
    <%= form.text_area :text %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>
    </div>
  </div>
</div>
